<?xml version="1.0" encoding="UTF-8"?>

<LinearLayout android:orientation="vertical"
    tools:context=".Pagamento"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="151dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:background="#63EC1A"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.027"
        app:srcCompat="@drawable/carta" />



    <LinearLayout
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:layout_height="wrap_content"
        android:layout_width="fill_parent">

        <EditText
            android:layout_height="45dp"
            android:layout_marginTop="7dp"
            android:layout_width="180dp"
            android:drawableTint="@color/azzurro"
            android:id="@+id/nome"
            android:layout_marginLeft="7dp"
            android:layout_gravity="center"
            android:hint="Nome"
            android:drawableLeft="@drawable/ic_person_black_24dp"
            android:maxLength="255"
            android:drawablePadding="16dp"
            />

        <EditText
            android:layout_height="45dp"
            android:layout_width="170dp"
            android:layout_marginTop="7dp"
            android:id="@+id/cognome"
            android:drawableTint="@color/azzurro"
            android:layout_gravity="center"
            android:hint="Cognome"
            android:drawableLeft="@drawable/ic_person_black_24dp"
            android:maxLength="255"
            android:drawablePadding="16dp"
            android:paddingLeft="16dp"/>



    </LinearLayout>





    <EditText
        android:layout_height="45dp"
        android:layout_width="350dp"
        android:id="@+id/carta"
        android:layout_marginTop="7dp"
        android:drawableLeft="@drawable/ic_credit_card_black_24dp"
        android:drawablePadding="16dp"
        android:drawableTint="@color/azzurro"
        android:layout_gravity="center"
        android:paddingLeft="16dp"
        android:maxLength="50"
        android:inputType="number"
        android:hint="Numero carta"/>






    <LinearLayout
        android:layout_marginTop="7dp"
        android:orientation="horizontal"
        android:layout_height="wrap_content"
        android:layout_width="fill_parent">

        <EditText
        android:layout_height="45dp"
        android:layout_width="190dp"
        android:layout_marginTop="7dp"
        android:id="@+id/data"
            android:drawableTint="@color/azzurro"
        android:layout_gravity="center"
        android:hint="Data di scadenza"
        android:maxLength="255"
        android:drawableLeft="@drawable/ic_date_range_black_24dp"
        android:drawablePadding="16dp"
        android:inputType="date"/>

        <EditText
            android:layout_height="45dp"
            android:layout_marginTop="7dp"
            android:layout_width="170dp"
            android:id="@+id/cvv"
            android:layout_gravity="center"
            android:hint="CVV"
            android:maxLength="255"
            android:drawablePadding="16dp"
            android:inputType="numberPassword"/>

    </LinearLayout>



    <EditText
        android:layout_marginTop="7dp"
        android:layout_height="45dp"
        android:layout_width="350dp"
        android:id="@+id/codp"
        android:drawableLeft="@drawable/currentlocation"
        android:drawablePadding="16dp"
        android:drawableTint="@color/azzurro"
        android:layout_gravity="center"
        android:paddingLeft="16dp"
        android:maxLength="50"
        android:inputType="textPostalAddress"
        android:hint="Codice postale"/>



    <EditText

        android:layout_height="45dp"
        android:layout_width="350dp"
        android:id="@+id/ntel"
        android:layout_marginTop="7dp"
        android:drawableLeft="@drawable/ic_phone_android_black_24dp"
        android:drawablePadding="16dp"
        android:drawableTint="@color/azzurro"
        android:layout_gravity="center"
        android:paddingLeft="16dp"
        android:maxLength="50"
        android:hint="Numero di cellulare"
        android:inputType="phone"/>



    <Button
        android:layout_height="50dp"
        android:layout_width="330dp"
        android:layout_marginTop="20dp"
        android:id="@+id/button"
        android:textStyle="bold"
        android:textSize="18dp"
        android:textColor="#fff"
        android:onClick="startClient"
        android:textAlignment="center"
        android:text="PROSEGUI"
        android:layout_gravity="center"
        android:background="@drawable/sfondo_b"
        />


    <TextView
        android:id="@+id/visualizza"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="17dp"
        android:textSize="20dp" />
</LinearLayout>