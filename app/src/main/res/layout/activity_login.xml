<?xml version="1.0" encoding="UTF-8"?>

    <LinearLayout android:orientation="vertical"
    tools:context=".login"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <ImageView
        android:layout_height="151dp"
        android:layout_width="match_parent"
        app:srcCompat="@drawable/sfondo"
        app:layout_constraintVertical_bias="0.027"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginStart="8dp"
        android:id="@+id/imageView"/>

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_marginTop="30dp"
        android:textStyle="bold"
        android:textSize="45dp"
        android:textColor="#0d6e6a"
        android:textAlignment="center"
        android:text="Login"/>

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_marginTop="7dp"
        android:textStyle="bold"
        android:textSize="16dp"
        android:textColor="#0d6e6a"
        android:textAlignment="center"/>

    <EditText
        android:layout_height="45dp"
        android:layout_width="350dp"
        android:id="@+id/username"
        android:drawableLeft="@drawable/ic_person_24dp"
        android:drawablePadding="16dp"
        android:drawableTint="@color/azzurro"
        android:layout_gravity="center"
        android:background="@drawable/contorno"
        android:paddingLeft="16dp"
        android:maxLength="50"
        android:hint="Username"/>

    <EditText
        android:layout_height="45dp"
        android:layout_width="350dp"
        android:layout_marginTop="20dp"
        android:id="@+id/password"
        android:layout_gravity="center"
        android:hint="Password"
        android:maxLength="255"
        android:drawableLeft="@drawable/ic_lock2_24dp"
        android:drawablePadding="16dp"
        android:background="@drawable/contorno"
        android:paddingLeft="16dp"
        android:inputType="textPassword"/>

    <Button
        android:layout_height="50dp"
        android:layout_width="330dp"
        android:layout_marginTop="20dp"
        android:id="@+id/button"
        android:textStyle="bold"
        android:textSize="18dp"
        android:textColor="#fff"
        android:textAlignment="center"
        android:text="Login"
        android:layout_gravity="center"
        android:background="@drawable/sfondo_b"
       />

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:textStyle="bold"
        android:textSize="16dp"
        android:textColor="@color/colorAccent"
        android:textAlignment="center"
        android:text="Non hai un account?Premi per registrarti"
        android:onClick="OpenRegister"
        android:autoLink="web"/>

</LinearLayout>