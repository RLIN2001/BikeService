<?xml version="1.0" encoding="UTF-8"?>

    <LinearLayout android:orientation="vertical" tools:context=".Register" android:layout_height="match_parent" android:layout_width="match_parent" xmlns:tools="http://schemas.android.com/tools" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:android="http://schemas.android.com/apk/res/android">

    <ImageView android:layout_height="120dp" android:layout_width="match_parent" app:srcCompat="@drawable/registrazione" app:layout_constraintVertical_bias="0.027" app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="8dp" android:layout_marginEnd="8dp" android:layout_marginTop="8dp" android:layout_marginStart="8dp" android:id="@+id/imageView"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:text="Registrazione"
        android:textAlignment="center"
        android:textColor="#0d6e6a"
        android:textSize="30sp"
        android:textStyle="bold" />

    <EditText
        android:layout_marginTop="10dp"
        android:drawableLeft="@drawable/ic_person_24dp"
        android:drawableTint="@color/azzurro"
        android:drawablePadding="16dp"
        android:id="@+id/username"
        android:maxLength="50"
        android:layout_width="350dp"
        android:layout_height="45dp"
        android:layout_gravity="center"
        android:background="@drawable/contorno"
        android:paddingLeft="16dp"
        android:hint="Username" />

    <EditText
        android:id="@+id/email"
        android:layout_width="350dp"
        android:drawableLeft="@drawable/ic_email_black_24dp"
        android:drawableTint="@color/azzurro"
        android:maxLength="50"
        android:drawablePadding="16dp"
        android:layout_height="45dp"
        android:layout_gravity="center"
        android:layout_marginTop="5dp"
        android:hint="Email"
        android:background="@drawable/contorno"
        android:paddingLeft="16dp"
        android:inputType="textEmailAddress" />

    <EditText
        android:id="@+id/tel"
        android:layout_width="350dp"
        android:background="@drawable/contorno"
        android:paddingLeft="16dp"
        android:maxLength="11"
        android:drawableLeft="@drawable/ic_phone_black_24dp"
        android:drawableTint="@color/azzurro"
        android:drawablePadding="16dp"
        android:layout_height="45dp"
        android:layout_gravity="center"
        android:layout_marginTop="5dp"
        android:hint="Telefono"
        android:inputType="phone" />

    <EditText
        android:id="@+id/password"
        android:layout_width="350dp"
        android:layout_height="45dp"
        android:layout_gravity="center"
        android:layout_marginTop="5dp"
        android:hint="Password"
        android:maxLength="255"
        android:drawableLeft="@drawable/ic_lock2_24dp"
        android:drawablePadding="16dp"
        android:background="@drawable/contorno"
        android:paddingLeft="16dp"
        android:inputType="textPassword" />

    <EditText
        android:id="@+id/password2"
        android:layout_width="350dp"
        android:layout_height="45dp"
        android:background="@drawable/contorno"
        android:paddingLeft="16dp"
        android:maxLength="255"
        android:drawableLeft="@drawable/ic_lock2_24dp"
        android:drawablePadding="16dp"
        android:layout_gravity="center"
        android:layout_marginTop="5dp"
        android:hint="Reinserisci la password"
        android:inputType="textPassword" />

    <Button
        android:layout_height="50dp"
        android:layout_width="150dp"
        android:layout_marginTop="5dp"
        android:id="@+id/button"
        android:textStyle="bold"
        android:textSize="18dp"
        android:textColor="#fff"
        android:textAlignment="center"
        android:text="REGISTRATI"
        android:layout_gravity="center"
        android:background="@drawable/sfondo_b"/>

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_marginTop="3dp" android:textStyle="bold" android:textSize="16dp" android:textColor="@color/colorAccent" android:textAlignment="center" android:text="Hai gia' un account?Premi per accedere" android:onClick="OpenLogin" android:autoLink="web"/>

</LinearLayout>