<?xml version="1.0" encoding="UTF-8"?>

    <LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
        android:padding="16dp" android:orientation="horizontal" android:layout_height="wrap_content" android:layout_width="match_parent" xmlns:android="http://schemas.android.com/apk/res/android">

    <ImageView
        android:id="@+id/image"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@mipmap/ic_launcher" />


    <LinearLayout android:orientation="vertical" android:layout_height="wrap_content" android:layout_width="match_parent">

    <TextView android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:id="@+id/textView1"
        android:textSize="20sp"
        android:layout_margin="5dp"
        android:textStyle="bold"
        android:textColor="#000" android:text="id"/>

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:id="@+id/orario" android:textSize="15sp" android:layout_margin="5dp" android:textStyle="bold"
            android:text=""/>


    </LinearLayout>

</LinearLayout>